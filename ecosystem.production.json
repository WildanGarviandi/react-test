{
  "apps" : [
    {
      "name"      : "Hub",
      "script"    : "server.js",
      "env_production" : {
        "NODE_ENV": "production"
      },
      "max_memory_restart" : "300M"
    }
  ],

  "deploy" : {
    "live" : {
      "user" : "ubuntu",
      "host": "hub.etobee.com",
      "ref"  : "origin/master",
      "repo" : "git@gitlab.com:etobee-techgroup/etobee-hub.git",
      "path" : "/home/ubuntu/hub",
      "post-deploy" : "yarn; npm run build; pm2 startOrRestart ecosystem.production.json --env production"
    }
  }
}
